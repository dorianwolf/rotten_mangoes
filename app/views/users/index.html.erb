<%= link_to "Back to all movies", movies_path %><br/>
<h1>Rotten Mangoes</h1>
<h2>Users</h2>
<%= paginate @users %>
<% @users.each do |user| %>
  <h3><%= user.full_name %></h3>
  <h5><%= (user.email)%></h5>
  <% if current_user and current_user.admin  %>
    <%= link_to "edit", edit_user_path(user) %> | <%= link_to "delete", user_path(user), method: :delete, confirm: "You sure?" %>
  <% end %>
<% end %>
