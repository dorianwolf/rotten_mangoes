<h1>Rotten Mangoes</h1>
<h2>Users</h2>
<%= paginate @users %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Admin Status</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.full_name %></td>
        <td><%= user.email%></td>
        <td> <%= user.admin %></td>
        <td><% if current_user and current_user.admin  %>
          <%= link_to "edit", edit_user_path(user) %> | <%= link_to "switch to user", admin_user_switch_path(user) %> | <%= link_to "delete", user_path(user), method: :delete, confirm: "You sure?" %>
        <% end %>
      </td>
      </tr>
    <% end %>
  </tbody>
</table>
